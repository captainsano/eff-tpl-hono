{
  "name": "eff-tpl",
  "version": "1.0.0",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun -F './packages/*' dev",
    "typecheck": "bun -F './packages/*' typecheck",
    "format": "biome check --write ./packages/**/*",
    "format:ci": "biome check ./packages/**/*",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tsconfig/node-lts": "^22.0.1",
    "@tsconfig/node-ts": "^23.6.1",
    "@tsconfig/recommended": "^1.0.8",
    "@tsconfig/strictest": "^2.0.5",
    "husky": "^9.1.7",
    "typescript": "^5.8"
  }
}
